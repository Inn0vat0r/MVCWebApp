@model MultiAppSystem.Models.AllAppDetails
@{
    ViewBag.Title = "Create App";
}

<h2>Create App</h2>
@section Scripts {
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
}
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>New App Creation</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.app_name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.app_name)
            @Html.ValidationMessageFor(model => model.app_name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.app_desc, "App Description")
        </div>
        <div class="editor-field">
           @Html.EditorFor(model => model.app_desc)
        @Html.ValidationMessageFor(model => model.app_desc)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.invite_code, "Invite Code")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.invite_code)
            @Html.ValidationMessageFor(model => model.invite_code)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.app_placename, "Place Name")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.app_placename)
            @Html.ValidationMessageFor(model => model.app_placename)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.app_placeid, "Place Name")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.app_placeid)
            @Html.ValidationMessageFor(model => model.app_placeid)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

