@model   IEnumerable<MultiAppSystem.Models.allappsdetails>


@{
    ViewBag.Title = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>
<body style="background-color:firebrick">

    <div class="container">
        @*<h2>Carousel Example</h2>*@
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner">

                <div class="item active">
                    <img src="~/Images/img1.jpg" alt="Support Communities" class="img-rounded" style="width:100%;height:60%">
                    <div class="carousel-caption">
                        <h3>Support Communities</h3>
                        <p>Having fun to help people!</p>
                    </div>
                </div>

                <div class="item">
                    <img src="~/Images/img2.jpg" alt="Travelling Communities" class="img-rounded" style="width:100%;height:60%">
                    <div class="carousel-caption">
                        <h3>Travelling Communities</h3>
                        <p>Travel with your lovable communities!</p>
                    </div>
                </div>

                <div class="item">
                    <img src="~/Images/img3.jpg" alt="Best Place Communities" class="img-rounded" style="width:100%;height:60%">
                    <div class="carousel-caption">
                        <h3>Best Place Communities</h3>
                        <p>We love to search best places!</p>
                    </div>
                </div>

            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
<br />
<br/>
    <div>
        @Html.ActionLink("All NonJoinedUser", "AllNonJoinedUsers")

    </div>
    <br />
    <br />
    <table class="table table-bordered table-responsive table-hover">
        <tr  class="danger">
            <th>
                App Image
            </th>
            <th>
                App Title
            </th>
            <th>
                App Type
            </th>
            <th>
                App Admin
            </th>
            <th>
                App Admin ID
            </th>
            <th>
                App Desc
            </th>
            <th>
                App SubType
            </th>
            <th>
                Total Members
            </th>
            <th>
                All Posts
            </th>
        </tr>

        @foreach (var item in Model)
    {
    <tr class="success">
        <td>
            <img src="@Url.Content(item.app_details.app_splashlink)" alt="Image" style="overflow: hidden; position: relative; width:200px; height:200px;" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.app_details.app_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.app_details.app_type)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.app_admin.admin_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.app_admin.admin_userid)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.app_details.app_desc)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.app_details.app_subtype)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.member_count)
        </td>
        <td>
            @Html.ActionLink("Posts", "AllPosts", new { app_id = item.app_details.app_id })
        </td>
      </tr>
    }

    </table>
</body>
</html>
